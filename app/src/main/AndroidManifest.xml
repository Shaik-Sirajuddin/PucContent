<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puccontent.org">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rguktlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rguktlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PucContent">
        <activity
            android:name=".AboutActivity"
            android:exported="true" />
        <activity
            android:name=".ReadingActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:name=".PdfsActivity"
            android:exported="true" />
        <activity
            android:name=".AddToDataBase"
            android:exported="true" />
        <activity
            android:name=".ChaptersActivity"
            android:exported="true" />
        <activity
            android:name=".SubjectsActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".SignInActivity"
            android:exported="true"
            android:theme="@style/splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>