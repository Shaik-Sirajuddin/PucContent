<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddToDataBase"
    android:background="@color/white"
    >

    <TextView
        android:elevation="20dp"
        android:id="@+id/header"
        android:background="@drawable/data_collection_signin_back"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/electrolize"
        android:text="@string/add_files_to_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        android:outlineSpotShadowColor="@color/black"
        app:cardElevation="50dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#1D034A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester :"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:backgroundTint="@color/black"
                android:elevation="10dp"
                android:id="@+id/semesterSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/one"
                app:layout_constraintTop_toTopOf="@+id/one" />
            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/one"
                />
            <TextView
                android:textColor="#1D034A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject :"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/one"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:backgroundTint="@color/black"
                android:elevation="10dp"
                android:id="@+id/subjectSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/two"
                app:layout_constraintEnd_toEndOf="@+id/semesterSpinner"
                app:layout_constraintStart_toStartOf="@+id/semesterSpinner"
                app:layout_constraintTop_toTopOf="@+id/two" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/two" />
            <TextView
                android:textColor="#1D034A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Chapter :"
                app:layout_constraintBottom_toBottomOf="@id/newChapter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/chapterSpinner" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:backgroundTint="@color/black"
                android:id="@+id/chapterSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintEnd_toEndOf="@+id/semesterSpinner"
                app:layout_constraintStart_toStartOf="@+id/semesterSpinner"
                app:layout_constraintTop_toBottomOf="@+id/two" />
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/or"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/semesterSpinner"
                app:layout_constraintStart_toStartOf="@+id/semesterSpinner"
                app:layout_constraintTop_toBottomOf="@id/chapterSpinner"
                android:text="Or add new chapter"
                android:padding="10dp"
                />

            <EditText
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:padding="10dp"
                android:background="#F8F8F8"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:hint="Chapter name here"
                android:textColorHint="#939495"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/newChapter"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/semesterSpinner"
                app:layout_constraintStart_toStartOf="@+id/semesterSpinner"
                app:layout_constraintTop_toBottomOf="@id/or" />
            <View
                android:id="@+id/bo"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newChapter"
                />

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/chapterBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/or"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/or"
                app:layout_constraintTop_toTopOf="@+id/or" />
            <EditText
                android:elevation="6dp"
                android:background="@drawable/addfile"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textSize="16sp"
                android:hint="Enter pdf title here"
                android:textColor="@color/black"
                android:id="@+id/pdfTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:elevation="6dp"
                android:id="@+id/pdfUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/addfile"
                android:hint="Paste pdf url here"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pdfTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:elevation="5dp"
        android:fontFamily="@font/arimo_bold"
        android:padding="14dp"
        android:text="@string/warning"
        android:textColor="#F40000"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:backgroundTint="@color/black"
        android:elevation="40dp"
        android:id="@+id/upload"
        android:text="Upload"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/submitBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>