<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PucContent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pinkish</item>
        <item name="colorPrimaryVariant">#0E1A59</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/ReemKufiFontTextview</item>
        <item name="android:buttonStyle">@style/ReemKufiFontButton</item>

    </style>
    <style name="signInActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">#E91E63</item>
    </style>
    <style name="splashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
    <style name="fullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ReemKufiFontTextview" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/reem_kufi</item>
    </style>

    <style name="ReemKufiFontButton" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/reem_kufi</item>
    </style>
</resources>